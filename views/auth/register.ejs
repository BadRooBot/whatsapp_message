<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>إنشاء حساب جديد - WhatsApp Messenger</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <div class="auth-container">
      <div class="auth-logo">
        <i class="fab fa-whatsapp fa-5x"></i>
        <h1>WhatsApp Messenger</h1>
      </div>

      <div class="card">
        <div class="card-header bg-success text-white">
          <h3><i class="fas fa-user-plus"></i> إنشاء حساب جديد</h3>
        </div>
        <div class="card-body">
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
          <% } %>

          <form action="/auth/register" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">الاسم</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">البريد الإلكتروني</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">كلمة المرور</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
              <label for="confirmPassword" class="form-label">تأكيد كلمة المرور</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-user-plus"></i> إنشاء حساب
              </button>
            </div>
          </form>

          <hr>

          <div class="d-grid gap-2">
            <a href="/auth/login" class="btn btn-primary">
              <i class="fas fa-sign-in-alt"></i> لديك حساب بالفعل؟ تسجيل الدخول
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html> 